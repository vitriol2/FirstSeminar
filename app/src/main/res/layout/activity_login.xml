<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sv_login_act"
        android:scrollbars="none"
        android:fillViewport="true">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".SignUpActivity"
            android:orientation="vertical" android:gravity="center_horizontal">
        <ImageView
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:id="@+id/imageView2"
                android:src="@drawable/logo_img"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="130dp"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/et_login_act_id"
                android:hint="아이디"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/edittext_border"
                android:paddingLeft="16dp"
                android:textSize="16dp"
                android:layout_marginBottom="12dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/et_login_act_pw"
                android:hint="패스워드"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/edittext_border"
                android:paddingLeft="16dp"
                android:textSize="16dp"
                android:layout_marginBottom="12dp"/>

        <Button
                android:text="로그인"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_login_act_signup"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/edittext_border_yellow"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:id="@+id/ll_login_act_signup">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textSize="12sp"
                      android:text="아직 솝트 회원이 아니십니까?"
                      android:textColor="@color/colorGray"
                      android:layout_marginBottom="4dp"
            android:textStyle="bold"
            android:id="@+id/tv_login_act_que"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textSize="12sp"
                      android:text="회원가입"
                      android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>