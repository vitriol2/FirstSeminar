<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="135dp"
              android:layout_height="170dp"
              android:background="@drawable/toolbar_border"
              android:gravity="center_horizontal"
              android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="40dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="인기"
                  android:textStyle="bold"
                  android:textSize="20sp"
                  android:layout_centerInParent="true"
                  android:id="@+id/rv_toon_title"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="@drawable/toolbar_border">

    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp" app:srcCompat="@android:drawable/btn_star_big_on"
                android:id="@+id/imageView"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"/>
    </RelativeLayout>


</LinearLayout>